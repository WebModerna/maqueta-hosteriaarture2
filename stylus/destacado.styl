/* highlight Styles */
#highlight
	height 150px
	margin 0
	overflow hidden
	position relative
	text-align left
	width 100%

	img
		border none 
		border-radius( 0 0 4px 4px)
		opacity 0
		position absolute 
		width 100%

#navegation
	position absolute 
	text-align center
	top 10%
	width 100%
	z-index 6 

	p
		display inline-block
		margin 0
		padding 0
		transition(all 0.8s ease-in-out)

		a
			border-radius(50%)
			background rgba(255,255,255,0.6)
			display inline-block
			height 5px
			margin 0 1px
			opacity 1
			padding 5px
			text-decoration none
			transition(all 0.5s ease-in-out)
			vertical-align top
			width 5px
			
			span
				display none
	
	.selected
		a
			background rojo_ladrillo
			opacity 1

			
@media only screen and (min-width: 320px)
	#highlight
		height 200px 
		

@media only screen and (min-width: 420px)
	#highlight
		height 250px


@media only screen and (min-width: 520px)
	#highlight
		height 300px 


@media only screen and (min-width: 620px)
	#highlight
		height 350px 


@media only screen and (min-width: 720px)
	#highlight
		height 400px
		
	
	#navegation
		top 30%
		
		a
			color blanco
			height 0
			opacity 0
			padding 0
			text-transform uppercase
			transform(translateX(500px) translateY(-500px))
			text-shadow_lindo()
			visibility hidden
			width 0
				
		.selected
			a
				background negro_transparente
				box-shadow(inset 0 0 20px negro)
				border-radius(5px)
				cursor default
				font-size 1.1em
				height auto
				opacity 1
				padding 1em 2em
				transform(translateX(0px) translateY(0px))
				visibility visible
				width auto
		
				span
					display block
		
@media only screen and (min-width: 820px)
	#highlight
		height 500px
	
@media only screen and (min-width: 1000px)
	#navegation
		.selected
			a
				font-size 1.5em
