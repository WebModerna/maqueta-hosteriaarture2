#promo
	display none
	padding 0 1em 1em 1em
	
	.activador
		left 1em
		padding 0
		margin 0
		span
			padding 1em 0.5em
			overflow hidden
			margin 0
			h3
				color blanco
				font-size 18px
				padding 0
				margin 0
				i
					font-size 40px
					padding 0
					margin-right 45px
	
	h3
		color marron_claro
		font-size 1.3em
		width 70%
		float right
	
	figure
		border-radius(5px)
		border 1px solid gris_claro
		margin 2em auto 1em auto
		max-width 380px
		position relative
		z-index 1
		
		figcaption
			border-radius( 0 0 5px 5px)
			background blanco_normal
			color rojo_ladrillo
			padding 0.5em 1em 1em 1em
		
		img
			border-radius(5px 5px 0 0)
			width 100%
			
		&:after, &:before
			box-shadow(0px 0px 6px 4px negro)
			bottom 5px
			content ""
			display block
			height 0
			position absolute
			width 43%
			
		&:after
			left 0.5em
			transform( rotate(-5deg) )
			z-index -1
		
		&:before
			right 0.5em
			transform( rotate(5deg) )
			z-index -1


.activador
	color #fff
	display inline-block
	left 4em
	margin 0
	padding 0
	position absolute
	top 12px
	
	a, span
		background rojo_ladrillo
		border-radius(4px)
		border 1px dashed blanco_grisaceo
		box-shadow( 0px 0px 0px 5px rojo_google unquote(",") 0px 1px 1px 0px rgba(255,255,255,0.5) inset unquote(",") 0px -15px 15px 0px rgba(0,0,0,0.25) inset )
		color #fff
		display inline-block
		padding 3px 6px
		text-decoration none
		text-shadow_lindo()
		transition(all 0.3s ease-in-out)
		
		
		h3
			color #fff
			display inline-block
			font-family "roboto_condensedregular"
			font-size 0
			font-weight lighter
			margin 0
			padding 0
			transition(all 0.3s ease-in-out)
			
			i
				animation agrandador 3.5s ease-in-out infinite alternate
				-o-animation agrandador 3.5s ease-in-out infinite alternate
				-ms-animation agrandador 3.5s ease-in-out infinite alternate
				-moz-animation agrandador 3.5s ease-in-out infinite alternate
				-webkit-animation agrandador 3.5s ease-in-out infinite alternate
				color #fff
				display inline-block
				font-size 25px
				
	&:hover, &:focus
		h3
			font-size 16px
			i
				margin-right 9px


@media only screen and (min-width: 1100px)
	.activador
		display inline-block
		position relative
		bottom auto
		left auto
		right 0.5em
		top 0.5em

	.activador.header
		display none