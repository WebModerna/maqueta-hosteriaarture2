/* ---- Forms ---- */
button
input
textarea
table.ui-datepicker-calendar
	font-family "roboto_condensedregular"

button[type="submit"]
button[type="reset"]
input[type="submit"]
input[type="reset"]
	font-size 20px !important

.input
	color gris_texto
	border none
	box-sizing()
	box-shadow(none)
	display table
	margin 0
	padding 0.5em
	position relative
	width 95%
	transition(all 0.3s ease-in-out)
	z-index 2
	
	&:hover
	&:focus
		outline none
		color azul_twitter


.input-group
	border 1px solid gris_claro
	border-collapse separate
	box-sizing()
	border-radius(5px)
	display table
	margin 0.5em auto
	overflow hidden
	padding 0
	transition(all 0.3s ease-in-out)

	&:hover
	&:focus
		color azul_twitter
		box-sizing()
		border 1px solid azul_twitter
		box-shadow( 0px 1px 1px rgba(0, 0, 0, 0.075) inset unquote(",") 0px 0px 8px rgba(102, 175, 233, 0.6))
		outline 0 none

		
.input-group-addon
	background gris_claro
	display table-cell
	padding 0 0.3em
	text-align center
	vertical-align middle
	width 1%
	min-width 40px
	white-space nowrap
