	padding 0 1em 1em 1em
	
	h3
		color marron_claro
		font-size 1.3em
		width 70%
		float right
	
	figure
		border-radius(5px)
		border 1px solid gris_claro
		margin 2em auto 1em auto
		max-width 380px
